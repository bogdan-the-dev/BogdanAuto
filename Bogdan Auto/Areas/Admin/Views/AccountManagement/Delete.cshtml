@model Bogdan_Auto.Models.AccountRegisterViewModel;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<br />
<h2 class="text-info">Delete account</h2>
<div>
    <form asp-action="Delete" method="post">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                @Html.ValidationMessageFor(admin => admin.Email, "", new { @class = "text-danger" })
            </div>

              <div class="form-group row">
                <div class="col-3">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="FirstName" readonly="readonly" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <br />
              <div class="form-group row">
                <div class="col-3">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="LastName" readonly="readonly" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Email" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AccountType"></label>
                </div>
                <div class="col-6">
                    <select asp-for="AccountType" class="form-control" disabled="disabled" >
                        @if(ViewBag.option == "Admin")
                        {
                            <option>Admin</option>
                        } else if(ViewBag.option == "Delivery")
                        {
                            <option>Delivery</option>
                        }

                    </select>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
            <br />
        </div>
    </form>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
