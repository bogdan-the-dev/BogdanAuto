@model Bogdan_Auto.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h2 class="text-info">Edit Category</h2>
<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" placeholder=/>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save changes" />
            <a asp-action="Index" class="btn btn-success">Back to the Category List</a>
             @Html.ValidationMessageFor(category => category.Name, "", new { @class = "text-danger" })  
        </div>

    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
