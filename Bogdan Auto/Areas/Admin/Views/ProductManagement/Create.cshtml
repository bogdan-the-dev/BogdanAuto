@model Bogdan_Auto.Models.Product;
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<br />

<h2 class="text-info">Add New Product</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
                         @Html.ValidationMessageFor(product => product.Name, "", new { @class = "text-danger" })  

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhotoPath"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhotoPath" class="form-control" type="file" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Model" class="form-control" />
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="WarrantyPeriod"></label>
            </div>
            <div class="col-5">
                <input asp-for="WarrantyPeriod" class="form-control" />
            </div>
            <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AvailableQuantity"></label>
            </div>
            <div class="col-5">
                <input asp-for="AvailableQuantity" class="form-control" />
            </div>
            <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5">
                <textarea  asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId"></label>
            </div>
            <div class="col-5">                
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control">
                    <option>Select Category</option>
                </select>
            </div>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ManufacturerId"></label>
            </div>
            <div class="col-5">
                <select asp-for="ManufacturerId" asp-items="ViewBag.ManufacturerId" class="form-control">
                    <option>Select Manufacturer</option>
                </select>
            </div>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsAvailable" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

    </div>    
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
