@model Bogdan_Auto.Models.Product;
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Product Delete</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
         <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
             </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Price" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhotoPath"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhotoPath" readonly="readonly"  class="form-control" type="file" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Model"></label>
            </div>
            <div class="col-8">
                <input asp-for="Model" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="WarrantyPeriod"></label>
            </div>
            <div class="col-8">
                <input asp-for="WarrantyPeriod" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="AvailableQuantity"></label>
            </div>
            <div class="col-8">
                <input asp-for="AvailableQuantity" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <textarea  asp-for="Description" readonly="readonly" class="form-control" rows="5"></textarea>
            </div>
            <span asp-validation-for="Description"  class="text-danger"></span>
        </div>
        <br />
                   <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-8">                
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" disabled="disabled" class="form-control">
                    </select>
                </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ManufacturerId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="ManufacturerId" asp-items="ViewBag.ManufacturerId" disabled="disabled" class="form-control">
                    </select>
                </div>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
        <br />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-8">
                <input asp-for="IsAvailable" disabled="disabled" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <h3>Do you want to delete this product ?</h3>
            <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete product" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
     </div>
        <div class="col-1"></div>
            <div class="col-3">
                <img src="\@Model.PhotoPath" width="100%" style="border-radius: 5px;border: 1px solid #efefef"/>
            </div>
        </div>    
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

