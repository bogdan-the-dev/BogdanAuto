@model Bogdan_Auto.Models.Product;
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Edit Stock</h2>
<form asp-action="IncrementStock" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AvailableQuantity"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="Model" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="Price" />
                    <input type="hidden" asp-for="WarrantyPeriod" />
                    <input type="hidden" asp-for="PhotoPath" />
                    <input asp-for="AvailableQuantity" class="form-control" />
                    <input type="hidden" asp-for="IsAvailable" />
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="hidden" asp-for="ManufacturerId" />
                </div>
                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
             </div>
             <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update Stock" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
    </div>

</form>