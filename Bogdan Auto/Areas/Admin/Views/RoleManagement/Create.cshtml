@model Bogdan_Auto.Areas.Admin.Models.CreateRoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h2 class="text-info">Create Category</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleName"></label>
            </div>
            <div class="col-5">
                <input asp-for="RoleName" class="form-control" />
            </div>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to the Category List</a>
             @Html.ValidationMessageFor(category => category.RoleName, "", new { @class = "text-danger" })  
        </div>

    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
