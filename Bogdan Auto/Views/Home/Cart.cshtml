﻿@using Bogdan_Auto.Models;
@model List<Product>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Your Cart</h1>

<br/>
<div class="row">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Poduct</th>
            <th>Name</th>
            <th>Price</th>
            <th>Warranty</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/@item.PhotoPath" width="200px" height="150px"/>
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.WarrantyPeriod</td>
                <td>
                    <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total amount
            : @Model.Sum(c=>c.Price) </h3>
        <a asp-action="Checkout" asp-controller="Order" asp-area="Order" class="btn btn-info">Process to Checkout</a>
    </div>
</div>

