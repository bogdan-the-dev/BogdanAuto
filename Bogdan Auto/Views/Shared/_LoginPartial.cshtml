@using Bogdan_Auto.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CustomerUser> SignInManager
@inject UserManager<CustomerUser> UserManager
@using Bogdan_Auto.Models
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{       
        var userLogged = await UserManager.FindByNameAsync(User.Identity.Name);
        var firstName = userLogged.FirstName;

    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @firstName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Account</a>
    </li>
}
</ul>
